<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="DisplayFeaturesActivity">

    <FrameLayout
        android:id="@+id/featureContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/stateUpdateLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stateUpdateLog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/foldColorImageView"
        app:layout_constraintTop_toBottomOf="@id/currentState" />

    <TextView
        android:id="@+id/currentState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/currentState"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deviceStateToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/deviceStateToggleButton"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/legendTextView"/>

    <TextView
        android:id="@+id/legendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legend"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/foldColorImageView"/>

    <ImageView
        android:id="@+id/foldColorImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:foreground="@color/colorFeatureFold"
        android:contentDescription="@string/foldLegendColor"
        app:layout_constraintBottom_toTopOf="@id/hingeColorImageView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/foldColorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/fold"
        app:layout_constraintBottom_toTopOf="@id/hingeColorTextView"
        app:layout_constraintStart_toEndOf="@id/hingeColorImageView" />

    <ImageView
        android:id="@+id/hingeColorImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:foreground="@color/colorFeatureHinge"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/hingeLegendColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/unknownColorImageView" />

    <TextView
        android:id="@+id/hingeColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:drawableStart="@color/colorFeatureHinge"
        android:text="@string/hinge"
        app:layout_constraintBottom_toTopOf="@id/unknownColorTextView"
        app:layout_constraintStart_toEndOf="@id/hingeColorImageView" />

    <ImageView
        android:id="@+id/unknownColorImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:foreground="@color/colorFeatureUnknown"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/unknownLegendColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/unknownColorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/unknown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/unknownColorImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
